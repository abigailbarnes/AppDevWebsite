<h1>List of artists</h1>

<table border = "1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Name
    </th>

    <th>
      
    </th>
  </tr>

  <% @list_of_artists.each do |an_artist|%>
    <tr>
      <td>
        <%= an_artist.id %>
      </td>

      <td>
        <%= an_artist.name %>
      </td>

      <td>
        <a href="/artists/<%= an_artist.id %>">
